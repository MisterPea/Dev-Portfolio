{
  "extends": "next/core-web-vitals",
  "settings": {
    "next": {
      "rootDir": "App/misterpea.me/"
    }
  },
  "rules": {
    "react-hooks/exhaustive-deps": "off",
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ],
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "comma-spacing": [
      "warn",
      {
        "before": false,
        "after": true
      }
    ],
    "semi": "warn"
  }
}